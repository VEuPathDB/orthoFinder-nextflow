FROM ubuntu:22.04

Label maintainer="rdemko2332@gmail.com"

RUN apt-get update && apt-get install -y samtools seqtk && apt-get clean && apt-get purge && rm -rf /var/lib/apt/lists/* /tmp/*

WORKDIR /usr/bin/

ADD /bin/*.pl /usr/bin/

# Making all tools executable
RUN chmod +x *

WORKDIR /work
