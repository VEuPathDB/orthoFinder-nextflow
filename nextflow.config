profiles {
  core {
    params {
      proteomes = "$baseDir/data/core/proteomes.tar.gz"
      outputDir = "$launchDir/output"
      outdatedOrganisms = "$baseDir/data/outdated.txt"
      diamondSimilarityCache = "$baseDir/data/core/diamondSimilarityCache"
      blastArgs = ""
    }
    docker {
      enabled = true
    }
  }
  peripheral {
    params {
      outputDir = "$launchDir/output"
      fastaSubsetSize = 100
      coreProteome = "$baseDir/data/peripherals/core.fa"
      coreBestReps = "$baseDir/data/peripherals/bestReps.fasta"
      peripheralProteome = "$baseDir/data/peripherals/peripheral.fasta"
      coreGroupsFile = "$baseDir/data/peripherals/Orthogroups.txt"
      outdatedOrganisms = "$baseDir/data/peripherals/outdated.txt"
      updateList = "$baseDir/data/outdated.txt"
      peripheralDiamondCache = "$baseDir/data/peripherals/cache"
      outputDir = "$launchDir/output"
      blastArgs = ""
    }
    docker {
      enabled = true
    }
  }
}
